image{
  max-width: 100%;
}
.userInfo{
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 0 20rpx;
  box-sizing: border-box;
  width: 100%;
  height: 400rpx;
  background-color: #00ac97;
  justify-content: center;
}

.userInfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx; 
  border-radius: 50%;
}

.userInfo-nickname {
  color: #fff;
}

.menu{
  margin: 20rpx 0;
  box-shadow: 1px 1px 4px #ccc;
  padding: 0 20rpx;
}

.menu-item+.menu-item{
  border-top:1px solid #ccc;
}
.menu-item {
  padding: 15rpx 0;
}