/* ssp/search/search.wxss */
.search-wrapper {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 15rpx 40rpx;
  box-sizing: border-box;
  width: 100%;
  background-color: #fafafa;
}

.search {
  display: flex;
  padding: 19rpx;
  box-sizing: border-box;
  width: 590rpx;
  height: 78rpx;
  line-height: 40rpx;
  border: 1rpx solid #f2f2f2;
  background-color: #fff;
  border-radius: 40rpx;
}

.search-img {
  width: 36rpx;
  height: 36rpx;
}

.search-input {
  flex: 1;
  margin-top: -5rpx;
  margin-left: 20rpx;
  color: #666;
}

.placeholder {
  color: #999;
  font-size: 28rpx;
  line-height: 40rpx;
}

.search-wrapper text {
  font-size: 32rpx;
  color: #999;
}

.category-wrap{
  border-top: 1px solid #666;
  padding-left:30rpx;
  margin-bottom: 30rpx;
  background-color: #fff;
}
.category{
  padding-top: 20rpx;
  padding-bottom: 10rpx;
  display: flex;
  flex-direction: column;
}
.category > text{
  color:#000;
  padding:10rpx 0;
  border-bottom: 1px solid #ccc;
  flex:1;
}

.category-list{
  display: flex;
  flex-flow: row wrap;
  margin-top: 20rpx;
}

.category-item{
  padding: 10rpx;
  margin-right:20rpx;
  margin-bottom: 20rpx;
  color: #000;
  border:1px solid #ccc;
}

.company-list{
  display: flex;
  flex-direction: column;
}


.no-result {
  margin-top: 80rpx;
  font-size: 28rpx;
  color: #999;
}